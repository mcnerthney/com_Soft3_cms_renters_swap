
#store_side_bar_owner_picture
%br/
= store.name

- if store.avatar?  
  = link_to image_tag(store.avatar.url), store_path(store)
- else
  - if ( store.user.fb_avatar_url?  ) 
    = link_to image_tag(store.user.fb_avatar_url + '?type=large'), store_path(store)
%br/

- if store.user == current_user
  = link_to "Change image or name", edit_store_path(store)

