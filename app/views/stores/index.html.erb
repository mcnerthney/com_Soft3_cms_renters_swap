<h1>Listing stores</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
<td>
	<% if store.active? %>
	      <%= store.name %>
	<% else %>
	     <del><%= store.name %></del>
	<% end %>
</td>
<td>
  <%= render :partial => "shared/store_sidebar", :locals => { :store => store } %>
</td>

    <td><%= link_to 'Show', store_path(store) %></td>
    <td><%= link_to 'Edit', edit_store_path(store) %></td>
  </tr>
<% end %>
</table>

<br />

