<div id="container">
		<div id="side-a">
           <%= render :partial => "shared/store_sidebar", :locals => { :store => @item.store } %>
         </div>
		
		<div id="content">
<p id="notice"><%= notice %></p>

<p>

<h2> <%= @item.title %>
</h2>
</p>

<p style="white-space:pre-wrap;">
  <%= @item.description %>
</p>

<p>
  <b>Location:</b>
  <%= @item.location %>
</p>

<% if @item.photos.any? %>
<table><tr>

<% @item.photos.each do |photo| %>
  <td>
  <%= photo.title %>
  <br/>
  <%= image_tag(photo.image.thumb.url) %>
  <br/>
     </td>
<% end %>
<% end %>
</tr></table>


<% if @item.store.user == @user %>
<%= link_to "Edit" , edit_store_item_path(@item.store,@item) %>
<% else %>
<%= link_to 'Contact Owner', new_interest_path %>
<% end %>

		</div>
		
		<div id="side-b">
			(Similar Listings)
		</div>
	</div>
</div>
